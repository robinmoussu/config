set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
focus_follows_mouse no
workspace_auto_back_and_forth yes

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal -e tmux new zsh
bindsym $mod+Return exec terminology #xterm
bindsym $mod+Shift+Return exec urxvt -e ranger

# kill focused window
bindsym $mod+d kill

#bindsym $mod+l exec synapse
# start dmenu (a program launcher)
bindsym $mod+Shift+L exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+l exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+c focus left
bindsym $mod+t focus down
bindsym $mod+s focus up
bindsym $mod+r focus right

# split in horizontal orientation
#bindsym $mod+a split h
#bindsym $mod+b split v
mode "split_h" {
   bindsym c focus left ; move right; mode "default"
   bindsym t focus down ; move up   ; mode "default"
   bindsym s focus up   ; move down ; mode "default"
   bindsym r focus right; move left ; mode "default"
   bindsym $mod+c focus left ; move right; mode "default"
   bindsym $mod+t focus down ; move up   ; mode "default"
   bindsym $mod+s focus up   ; move down ; mode "default"
   bindsym $mod+r focus right; move left ; mode "default"

   bindsym Return  exec terminology; mode "default"
   bindsym $mod+Return  exec terminology; mode "default"

# back to normal: Enter or Space
   bindsym b mode "default"
   bindsym $mod+b mode "default"
   bindsym Escape mode "default"
   bindsym space  mode "default"
}
bindsym $mod+b split h; mode "split_h"
mode "split_v" {
#luminosité
   bindsym c focus left ; move right; mode "default"
   bindsym t focus down ; move up   ; mode "default"
   bindsym s focus up   ; move down ; mode "default"
   bindsym r focus right; move left ; mode "default"
   bindsym $mod+c focus left ; move right; mode "default"
   bindsym $mod+t focus down ; move up   ; mode "default"
   bindsym $mod+s focus up   ; move down ; mode "default"
   bindsym $mod+r focus right; move left ; mode "default"

   bindsym Return  exec terminology; mode "default"
   bindsym $mod+Return  exec terminology; mode "default"

# back to normal: Enter or Space
   bindsym a mode "default"
   bindsym $mod+a mode "default"
   bindsym Escape mode "default"
   bindsym space  mode "default"
}
bindsym $mod+a split v; mode "split_v"


# exit
set $mode_system SYSTEM : lock (l), logout (e), suspend (s), hibernate (h), reboot (r), shutdown (S) - in-place (o), reload (O) - bepo(b), perso(p), azerty(a)
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.i3/exit.sh lock; mode "default"
    bindsym e exec --no-startup-id ~/.i3/exit.sh logout; mode "default"
    bindsym s exec --no-startup-id ~/.i3/exit.sh suspend; mode "default"
    bindsym h exec --no-startup-id ~/.i3/exit.sh hibernate; mode "default"
    bindsym r exec --no-startup-id ~/.i3/exit.sh reboot; mode "default"

    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym o restart; mode "default"
    # reload the configuration file
    bindsym Shift+O reload; mode "default"

    bindsym a exec setxkbmap fr; mode "default"
    bindsym b exec setxkbmap fr bepo; mode "default"
    bindsym p exec setxkbmap perso bepo_perso; mode "default"

    bindsym Shift+s exec --no-startup-id ~/.i3/exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space mode "default"
}
bindsym $mod+Escape mode "$mode_system"

# resize window (you can also use the mouse for that)
set $resize RESIZE : shrink (c/s), grow (t/r)
mode "$resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym c resize shrink height 10 px or 10 ppt
        bindsym t resize shrink width 10 px or 10 ppt
        bindsym s resize grow width 10 px or 10 ppt
        bindsym r resize grow height 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym space mode "default"
}
bindsym $mod+z mode "$resize"

set $sound VOLUME : volume down (c and t), volume up(s and r), mute (m), pacmixer (p)
mode "$sound" {
   bindsym c exec pulseaudio-ctl down 10
   bindsym t exec pulseaudio-ctl down 1
   bindsym s exec pulseaudio-ctl up   1
   bindsym r exec pulseaudio-ctl up   10
   bindsym m exec pulseaudio-ctl mute

   bindsym p exec i3-sensible-terminal -e pacmixer; mode "default"
   bindsym $mod+p exec i3-sensible-terminal -e pacmixer; mode "default"

# back to normal: Enter or Escape
   bindsym Return mode "default"
   bindsym Escape mode "default"
   bindsym space  mode "default"
}
bindsym $mod+j mode "$sound"

# multimedia keys
bindsym XF86MonBrightnessUp   exec xbacklight -set $( echo "$(xbacklight)  / 0.7" | bc )
bindsym XF86MonBrightnessDown exec xbacklight -set $( echo "$(xbacklight)  * 0.7" | bc )
bindsym XF86AudioLowerVolume   exec pulseaudio-ctl down 10
bindsym XF86AudioRaiseVolume exec pulseaudio-ctl up   10
bindsym XF86AudioMute exec pulseaudio-ctl mute

set $screen SCREEN : osd down (c and t), osd up(s and r), arandr (a), TapButton1 on (u) / off (i), int(n), ext(é), ext+int(è), presentation(p)
mode "$screen" {
    bindsym c exec xbacklight -set $( echo "$(xbacklight)  * 0.7" | bc)
    bindsym t exec xbacklight -set $( echo "$(xbacklight)  * 0.8" | bc)
    bindsym s exec xbacklight -set $( echo "$(xbacklight)  / 0.7" | bc | awk '{if($1 <= 2) {print 3} else {print $1}}')
    bindsym r exec xbacklight -set $( echo "$(xbacklight)  / 0.8" | bc | awk '{if($1 <= 2) {print 5} else {print $1}}')

    bindsym n exec ~/.screenlayout/normal.sh; mode "default"
    bindsym 0xe9 exec ~/.screenlayout/ext.sh; mode "default"
    bindsym 0xe8 exec ~/.screenlayout/top_ext.sh; mode "default"
    bindsym p exec ~/.screenlayout/presentation.sh; mode "default"

    bindsym m exec xset dpms force off; mode "default"

    bindsym a exec arandr; mode "default"
    bindsym $mod+a exec arandr; mode "default"

    bindsym u exec synclient TapButton1=0; mode "default"
    bindsym i exec synclient TapButton1=1; mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym space  mode "default"
}
bindsym $mod+m mode "$screen"


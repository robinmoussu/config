#luminosité
alias lumup="xcaliber -s 10"
alias lumdown="xcaliber -s -10"

#programmes divers
alias vims="vim -S"
alias o="xdg-open"
alias m="mplayer"
alias calcurse="LC_ALL=utf8 calcurse"
alias i3-error="less /run/user/robin/i3/errorlog.5959 "

#raccourcis
export _doc=/mnt/documents/Document/
export _win=/mnt/win/

export _docs=/mnt/documents/
export _music=/home/robin/Musique/
export _videos=/mnt/documents/Videos/
export _img=/home/robin/Images/
export _cour=/home/robin/Document/2eme_annee_iut/
export _word='/home/robin/.PlayOnLinux/wineprefix/Office2010/drive_c/users/robin/Application Data/Microsoft/Word/STARTUP/'


unclutter -idle 2 -jitter 5 2&>1 /dev/null
zsh

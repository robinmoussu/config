
"personal
let mapleader = ','
nnoremap <Leader>rr :source ~/.vimrc <CR>

"Esc
inoremap <ESC> yypp

augroup perso_cpp
    autocmd!
    "point virgule en fin de ligne
    autocmd Filetype c,c++ nnoremap <Leader>; mjA;<Esc>`j
    "make
    autocmd Filetype c,c++ noremap <F3> :wa <CR> :!clear <CR> :!make run <CR>
    autocmd Filetype c,c++ noremap <F4> :wa <CR> :!make clean <CR>
augroup END

augroup perso_txt
    autocmd!
    "export"
    autocmd Filetype txt nnoremap <F3> :wa <CR> :!pandoc -s expand('%:t') -o 
augroup END

"quitter et remmaper l'enregistrement
nnoremap <F1><F1> :w<CR><Esc>
nnoremap <F2><F1> :q!
nnoremap <F1><F2> :wqa <CR><Esc>
nnoremap <F2><F2> :q<CR>

"w
map é w
map É W
"pour EasyMotion
nmap àé àw
nmap ÀÉ ÀW
"%
map ° %
map ¿ `
"gt gs"
noremap gt gT
noremap gs gt
"v
noremap <C-V> v
noremap  v <C-V>

noremap _ ,

"bepo
" ————————————————
noremap t gj
noremap T J

noremap s gk
noremap S S
noremap k s
noremap K S

noremap h t
noremap H T

noremap l h
noremap L H


"espace correspond à "l"
noremap   L

" Corollaire : repli suivant / précédent
noremap zs zj
noremap zt zk

" ————————————————
"noremap j t
"noremap J T
"noremap l c
"noremap L C
"noremap h r
"noremap H R
"noremap k s
"noremap K S
" Corollaire : correction orthographique
noremap ]k ]s
noremap [k [s



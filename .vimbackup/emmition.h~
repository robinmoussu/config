#ifndef EMMISSION_H
#define EMMISSION_H

enum Code {
    BALISE1,
    BALISE2,
    BALISE3
}

/* prend en parametre un identifiant unique permettant d'identifier l'emmeteur
 * Utilise les fonctions emmission_0 et emmission_1 pour emmetre les bits de l'identifiant
 */
void emmission_trame (char id_emmeteur);

/* emmet le codage correspondant à un bit de valeur 0
 */
void emmission_0 ();

/* emmet le codage correspondant à un bit de valeur 1
 */
void emmission_1 ();

#endif

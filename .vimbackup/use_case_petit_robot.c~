enum Couleur {
    JAUNE,
    ROUGE
};

void send_posx(int x);
void send_posy(int x);

void go(Couleur c, int x, int y)
{
    if (c == JAUNE) {
        send_posx(EST - x);
    } else {
        send_posx(OUEST + x);
    }
    send_posy(y);
}

Couleur c_oppose (Couleur c)
{
    if (c == JAUNE) {
        return ROUGE;
    } else {
        return JAUNE;
    }
}

void parcourt(Couleur c)
{
    go(           c,ARRIERE,       DEPART);
    go(           c,ARRIERE,       DEPART);
    go(           c,    135,       DEPART);
    go(           c,    135, NORD + AVANT);
    go(           c,   95,5,  SUD - ARBRE);
    go(           c,   COIN,  SUD - ARBRE);
    go(           c,  ARBRE,  SUD -  COIN);
    go(           c,  ARBRE,       DEPART);
    go(           c,ARRIERE,       DEPART);
    go(c_oppose(c),   95,5 ;       DEPART);
    go(c_oppose(c),   95,5 ;          BAC);
}
